{
  "manifest_version": 3,
  "name": "Arcaea Online Helper",
  "version": "1.0",
  "description": "增强 Arcaea Online 查分页面：显示谱面定数、单曲PTT、推分目标、计算总PTT等功能",
  "permissions": ["storage", "downloads", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Arcaea Helper 设置"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://arcaea.lowiro.com/*/profile/potential",
        "https://arcaea.lowiro.com/*/profile/potential/*"
      ],
      "js": [
        "js/arcaea-calculator.js",
        "js/arcaea-data-loader.js",
        "content.js"
      ],
      "css": ["css/arcaea-styles.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "data/ChartConstant.json",
        "data/Songlist.json"
      ],
      "matches": ["https://arcaea.lowiro.com/*"]
    }
  ]
}
