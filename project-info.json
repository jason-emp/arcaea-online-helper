{
  "name": "arcaea-online-helper",
  "version": "2.0.0",
  "description": "多端 Arcaea Online 查分助手 - Chrome 扩展 + Flutter 移动应用",
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/arcaea-online-helper"
  },
  "keywords": [
    "arcaea",
    "ptt",
    "calculator",
    "chrome-extension",
    "flutter",
    "webview"
  ],
  "engines": {
    "node": ">=14.0.0",
    "flutter": ">=3.10.0"
  },
  "structure": {
    "shared_core": {
      "description": "共享核心模块，包含算法、数据和样式",
      "components": {
        "js/arcaea-calculator.js": "PTT 计算算法",
        "js/arcaea-data-loader.js": "数据加载模块",
        "css/arcaea-styles.css": "共享样式",
        "data/ChartConstant.json": "谱面定数数据",
        "data/Songlist.json": "歌曲列表数据"
      }
    },
    "chrome_extension": {
      "description": "Chrome 浏览器扩展",
      "manifest_version": 3,
      "dependencies": [
        "../shared_core/js/arcaea-calculator.js",
        "../shared_core/js/arcaea-data-loader.js",
        "../shared_core/css/arcaea-styles.css",
        "../shared_core/data/ChartConstant.json",
        "../shared_core/data/Songlist.json"
      ]
    },
    "arcaea_helper_mobile": {
      "description": "Flutter 移动应用",
      "framework": "Flutter",
      "dependencies": {
        "flutter_inappwebview": "^6.0.0",
        "shared_preferences": "^2.2.2",
        "path_provider": "^2.1.1"
      },
      "assets": [
        "../shared_core/js/",
        "../shared_core/css/",
        "../shared_core/data/"
      ]
    }
  },
  "features": {
    "显示谱面定数": "在曲目名称旁显示谱面定数",
    "计算单曲PTT": "显示每首歌曲的 PTT 值",
    "计算总PTT": "基于 Best 30 和 Recent 10 计算精确总 PTT",
    "目标分数": "显示使显示 PTT +0.01 所需的目标分数",
    "定数表格": "展示不同分数等级所需的最低谱面定数",
    "响应式布局": "PC 端支持双列/三列/四列布局",
    "可自定义设置": "控制各项功能的显示/隐藏"
  },
  "installation": {
    "chrome_extension": [
      "1. 克隆或下载项目到本地",
      "2. 打开 Chrome 浏览器，访问 chrome://extensions/",
      "3. 启用「开发者模式」",
      "4. 点击「加载已解压的扩展程序」",
      "5. 选择项目根目录（包含 shared_core 和 chrome_extension）",
      "6. 访问 https://arcaea.lowiro.com/*/profile/potential 即可使用"
    ],
    "flutter_app": [
      "1. 确保已安装 Flutter SDK (>=3.10.0)",
      "2. 进入 arcaea_helper_mobile 目录",
      "3. 运行 flutter pub get 安装依赖",
      "4. 运行 flutter run 启动应用"
    ]
  },
  "development": {
    "modify_algorithm": {
      "file": "shared_core/js/arcaea-calculator.js",
      "reload": [
        "Chrome 扩展：重新加载扩展",
        "Flutter 应用：热重启应用"
      ]
    },
    "modify_styles": {
      "file": "shared_core/css/arcaea-styles.css",
      "reload": [
        "Chrome 扩展：刷新网页",
        "Flutter 应用：重新注入脚本"
      ]
    },
    "update_data": {
      "files": [
        "shared_core/data/ChartConstant.json",
        "shared_core/data/Songlist.json"
      ],
      "reload": [
        "Chrome 扩展：重新加载扩展",
        "Flutter 应用：运行 flutter pub get"
      ]
    }
  },
  "changelog": {
    "2.0.0": {
      "date": "2025-12-01",
      "changes": [
        "重构为多端架构",
        "提取共享核心模块 (shared_core)",
        "新增 Flutter 移动应用支持",
        "优化代码结构和可维护性"
      ]
    },
    "1.0.0": {
      "date": "2024-XX-XX",
      "changes": [
        "首次发布",
        "支持显示谱面定数和单曲 PTT",
        "支持计算目标分数",
        "支持定数推荐表格"
      ]
    }
  }
}
